<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:orientation="vertical"
    android:layout_marginLeft="10dp">
    
    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Uzma"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="1dp"
        android:textColor="#FF9900"
        android:textStyle="bold"/>
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="300dp"
        android:layout_below="@+id/nameTv"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/bg_receiver"
            android:layout_marginBottom="5dp"
            android:text="The message"
            android:textColor="#fff"/>
        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/messageIv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_receiver"
            android:src="@drawable/ic_users_black"/>
        <RelativeLayout
            android:id="@+id/pdfMessage"
            android:layout_width="248dp"
            android:layout_toRightOf="@+id/profileTv"
            android:background="@drawable/bg_receiver"
            android:padding="5dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/messagePdf"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_pdf"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/filename"
                android:text="File name.pdf"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/messagePdf"/>
        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/timeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="6sp"
        android:layout_below="@+id/r1"
        android:textColor="#FFFFFF"/>
</RelativeLayout>