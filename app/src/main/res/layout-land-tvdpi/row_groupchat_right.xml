<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:text="Uzma"
            android:textColor="#fff"
            android:textStyle="bold"/>
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_below="@+id/r1"
        android:layout_width="300dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sender"
            android:text="helloo bro"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/messageTv"
            android:textSize="15sp"
            android:textColor="#000"
            android:padding="8dp"/>
        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/messageIv"
            android:layout_width="200dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginRight="7dp"
            android:padding="15dp"
            android:src="@drawable/ic_face_black"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_sender"/>
        <RelativeLayout
            android:id="@+id/pdfMessage"
            android:layout_width="248dp"
            android:layout_toRightOf="@+id/profileTv"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:background="@drawable/bg_sender"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/messagePdf"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_pdf"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/filename"
                android:text="File name.pdf"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/messagePdf"/>
        </RelativeLayout>

    </RelativeLayout>
        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Time"
            android:layout_marginRight="5dp"
            android:textSize="8dp"
            android:layout_below="@+id/r2"
            android:textColor="#FFFFFF"/>
</RelativeLayout>